#include<iostream>
using namespace std;

class node{

public :
    int data;
    node*left;
    node *right;

    node(int d)
    {
        this->data=d;
        this->left=NULL;
        this->right=NULL;
    }





};


node *createtree(node *root)
{
    cout<<"Enter the data"<<endl;
    int data;
    cin>>data;
    root=new node(data);
    if(data==-1)
        return NULL;
        cout<<"Enter the data root left"<<data<<endl;
        root->left=createtree(root->left);
        cout<<"Enter the data root right"<<data<<endl;
        root->right=createtree(root->right);

        return root;



}
int main()
{
    node *root=NULL;
    root=createtree(root);
}
