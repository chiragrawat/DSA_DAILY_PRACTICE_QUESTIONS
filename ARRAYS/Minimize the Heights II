   int getMinDiff(int arr[], int n, int k) {
        // code here
        sort(arr,arr+n);
        int maxel=arr[n-1];
        int minel=arr[0];
        int res=maxel-minel;
        for(int i=1;i<n;i++)
        {
            maxel=max(arr[n-1]-k,arr[i-1]+k);
            minel=min(arr[0]+k,arr[i]-k);
            if(minel<0)
            continue;
            res=min(res,maxel-minel);
        }
        return res;
    }
